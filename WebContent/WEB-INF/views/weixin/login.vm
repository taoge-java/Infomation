       });
	   
	   $("form").submit( function(event){
          var account = $(".name").val(); 
          var pwd = $(".pwd").val();
          if(!account ||!pwd) {
              $("#err").css("display","inline-block");
              $("#err").text("请输入用户名或密码");
               return false;
          }
         var code= $("#valid").val().toLocaleLowerCase();
         code = $.trim(code);    
         if(code.length<4) {
             $("#err").css("display","inline-block");
             $("#err").text("验证码错误");
             return false;
         }
      });
	  
	  $('#changeimg').click(function(){
          $('#verifyCodePic')[0].src='/jcaptcha.jpg?'+Math.random();
          return false;
      }); 
 });
